                        <li class="mb-2"><code class="inline-code">scale(float $scale)</code></li>
                        <li class="mb-2"><code class="inline-code">crop(int $w, int $h, int $x = 0, int $y = 0)</code></li>
                        <li class="mb-2"><code class="inline-code">cropThumb(int $px, ?int $offset = null)</code></li>
                        <li class="mb-2"><code class="inline-code">rotate(int $degrees, ?Color\ColorInterface $bgColor = null, int $alpha = null)</code></li>
                        <li class="mb-2"><code class="inline-code">flip()</code></li>
                        <li class="mb-2"><code class="inline-code">flop()</code></li>
                    </ul>
