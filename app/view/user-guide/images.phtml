                        <li class="mb-2"><code class="inline-code">createIndex(?int $width = null, ?int $height = null, ?string $name = null)</code></li>
                        <li class="mb-2"><code class="inline-code">resizeToWidth(int $w)</code></li>
                        <li class="mb-2"><code class="inline-code">resizeToHeight(int $h)</code></li>
